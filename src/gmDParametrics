/*! \file gmDParametrics
 *
 *  C++ interface for the GMlib Displayable Parametrics headers and the relative classes
 *
 *  \date   2008-09-07
 */


// The base class of all subclasses of Displayable Parameterized Curvss, Surfaces, Volumes, Flows, ..., ..., etc.
#include "gmDParametrics.h"


// Direct subclasses of Displayable Parametrics
#include "gmDCurve"          // Curve
#include "gmDSurf"           // Surface

// Displayable Parametric Curves
#include "gmDPCircle"         // Circle
#include "gmDPArc"            // An Arc
#include "gmDPBezierCurve"    // Bezier Curve
#include "gmDPBSplineCurve"   // BSpline Curve
#include "gmDPButterfly"      // The so called "Butterfly" curve
#include "gmDPERBSCurve"      // Expo Rational BSpline Curve
#include "gmDPRoseCurve"      // Rose Curve
#include "gmDPTCurve"         // Transformable TCurve (special curve)

// Displayable Parametric Tensor Product Surfaces
#include "gmDPApple"          // Apple
#include "gmDPBezierSurf"     // Bezier Surface
#include "gmDPCylinder"       // Cylinder
#include "gmDPERBSSurf"       // Expo Rational BSpline Surface
#include "gmDPPlane"          // Plane
#include "gmDPSphere"         // Sphere
#include "gmDPSteinerSurf"    // The Steiner Surface
#include "gmDPTorus"          // Torus Surface

// Scriptable
#include "gmDPLuaScriptCurve"
#include "gmDPLuaScriptSurf"
