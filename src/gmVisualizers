/*! \file gmVisualizers
 *
 *  C++ interface for the GMlib Visualizer headers and the relative classes
 *  for Displayable Curves and Surfaces.
 *
 *  \date   2008-09-15
 */


// Visualizer Base Class
#include "gmVisualizer"

// Internal Visualizers (ment for internal use)
#include "gmVisualizerStdRep"                     // Standard representation visualizer (SceneObject)
#include "gmSelectorGridVisualizer"               // Visualizes grid lines in-between selectors

// Visualizers
// Scene Object
#include "gmSurroundingSphereVisualizer"          // Surrounding sphere visualizer

// PCurve Visualizers
#include "gmPCurveVisualizer"                     // PCurve Visualizer Base Visualizer
#include "gmPCurveDefaultVisualizer"              // PCurve Default Visualizer
#include "gmPCurveContoursVisualizer"             // PCurve Contours Visualizer
#include "gmPCurveDerivativesVisualizer"          // PCurve Derivatives Visualizer
#include "gmPCurvePointsVisualizer"               // PCurve Points Visualizer

// PSurf Visualizers
#include "gmPSurfVisualizer"                      // PSurf Visualizer Base Visualizer
#include "gmPSurfDefaultVisualizer"               // PSurf Default Visualizer
#include "gmPSurfContoursVisualizer"              // PSurf Contours Visualizer
#include "gmPSurfDerivativesVisualizer"           // PSurf Derivatives Visualizer
#include "gmPSurfNormalsVisualizer"               // PSurf Normals Visualizer
#include "gmPSurfPointsVisualizer"                // PSurf Points Visualizer

// PTriangle visualizers
#include "gmPTriangleVisualizer"                  // PTriangleVisualizer Base Visualizer
#include "gmPTriangleColorVisualizer"             // PTriangle Color Visualizer
#include "gmPTriangleColorPointVisualizer"        // PTriangle Color-Point Visualizer

// TriangleFacets Visualizers
#include "gmTriangleFacetsVisualizer"             // TriangleFacets Base Visualizer
#include "gmTriangleFacetsDefaultVisualizer"      // TriangleFacets Default Visualizer
#include "gmTriangleFacetsVoronoiVisualizer"      // TriangleFacets Voronoi Visualizer
